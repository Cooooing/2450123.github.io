$category-name-font-size = 1.5rem

.category-container {

  keep-container(1, 2rem, 2rem)

  background: rgba(255,255,255,0.1);/*白色半透明*/

  .category-name {
    margin-bottom var(--components-spacing)
    color var(--text-color-2)
    font-weight 600
    font-size $category-name-font-size

    i {
      color var(--text-color-2)
    }

    +keep-tablet() {
      font-size $category-name-font-size * 0.9
    }

    +keep-mobile() {
      font-size $category-name-font-size * 0.8
    }
  }
}
